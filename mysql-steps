sudo apt install mysql-server -y
sudo mysql_secure_installation
sudo mysql

#remove root access with no password on local
#create application user
ALTER USER 'root'@'localhost' IDENTIFIED WITH mysql_native_password BY 'P1983c22decbf421888afc0011f44dcb2+';
CREATE USER 'paytecno'@'%' IDENTIFIED BY 'P1983c22decbf421888afc0011f44dcb2+';
GRANT ALL PRIVILEGES ON *.* TO 'paytecno'@'%' WITH GRANT OPTION;
FLUSH PRIVILEGES;
exit;

#change port and localhost access
sudo nano /etc/mysql/mysql.conf.d/mysqld.cnf
sudo /etc/init.d/mysql restart